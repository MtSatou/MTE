## Environment ##
NODE_ENV=production


## Server ##
PORT=3000
HOST=localhost


## Setup pino ##
JET_LOGGER_MODE=CONSOLE
JET_LOGGER_FILEPATH=pino.log
JET_LOGGER_TIMESTAMP=TRUE
JET_LOGGER_FORMAT=LINE


## Authentication ##
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
SECURE_COOKIE=false
JWT_SECRET=xxxxxxxxxxxxxx
COOKIE_SECRET=xxxxxxxxxxxxxx
# expires in 3 days
COOKIE_EXP=259200000
## API base path
API_BASE=/api

## Email Configuration ##
# SMTP 服务器配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
# 发件人邮箱和密码
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# 发件人显示名称
EMAIL_FROM=MTExpress <your-email@gmail.com>

## MySQL Database Configuration ##
# MySQL数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_NAME=mtexpress_prod
DB_CHARSET=utf8mb4
DB_TIMEZONE=+08:00
# 连接池配置
DB_CONNECTION_LIMIT=10

## Redis Configuration ##
# Redis缓存配置（可选，设置为 true 启用）
REDIS_ENABLED=false
# Redis服务器配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Redis键前缀
REDIS_KEY_PREFIX=mtexpress:
# 默认过期时间（秒）
REDIS_TTL=3600
